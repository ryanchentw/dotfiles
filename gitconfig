[core]
    excludesfile = /Users/viki/.gitignore
[alias]
    br = branch
    ci = commit
    co = checkout
    dd = diff HEAD^ HEAD
    di = diff
    gl = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) - %C(dim magenta)%an%C(reset) %C(bold yellow)%d%C(reset)' --all
    rc = commit --amend
    sl = stash list
    st = status
    storm = log --format=format:'%ai %h %cn %s%b' --all
    uc = reset HEAD^
[color]
    ui = auto
[push]
    default = matching
[user]
    name = weichi.chen
    email = mithrilchen@gmail.com
[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f
